<div class="background">
	<d>
		<h2>All Herbs</h2>

		<div class="herbs-container">
			{{#each herbs}}
			<a href="/herbs/{{_id}}">
				<div class="herbs">

					<h3> {{ name }} </h3>
					<img src="../imgs/{{ img }}" alt="" srcset="">


					<h4>${{price}} per pound </h4>
				</div>
			</a>
			{{/each}}
			{{!-- <ul class="ailmentlist">
				<h3>Best Used For</h3>
