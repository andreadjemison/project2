				<li>{{this}}</li>
				{{/each}}
			</ul> --}}

		</div>
		<br><br>
		{{!-- <form action="" method="post"></form> --}}
		<div class="forms">
			<div class="create">
				<p>Didn't Find What You Were Looking For?</p>
				<a href="/herbs/new">
					<input class="button" id="createbutton" type="submit" value="Request New Herb">
				</a>
			</div>
			<div class="deleteall">

				<p>Delete All Herbs and start from stratch!</p>
				<form action="/herbs/?_method=delete" method="POST">
					<input id="createbutton" class="button" type="submit" value="Delete All Herbs">
				</form>
			</div>
		</div>
</div>